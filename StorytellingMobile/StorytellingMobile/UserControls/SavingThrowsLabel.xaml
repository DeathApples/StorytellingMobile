<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StorytellingMobile.UserControls.SavingThrowsLabel">
    <ContentPage.Content>
        <Frame Margin="0" Padding="0" CornerRadius="8" BackgroundColor="#282828">
            <Grid Padding="8, 4" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="TitleLabel" Grid.Column="0" HorizontalTextAlignment="Start" TextColor="Snow"/>
                <Label x:Name="ValueLabel" Grid.Column="1" HorizontalTextAlignment="End" TextColor="Snow" />
            </Grid>
        </Frame>
    </ContentPage.Content>
</ContentView>